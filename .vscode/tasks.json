{
  "$schema": "vscode://schemas/tasks",
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Tests: Pytest (venv)",
      "type": "shell",

      // Usa l'interprete configurato in VS Code, se presente
      "command": "${config:python.defaultInterpreterPath}",

      // Fallback per ogni OS se l'impostazione sopra non Ã¨ definita
      "windows": {
        "command": "${workspaceFolder}\\${input:venvFolder}\\Scripts\\python.exe",
        "options": {
          "env": {
            "VIRTUAL_ENV": "${workspaceFolder}\\${input:venvFolder}",
            "PATH": "${workspaceFolder}\\${input:venvFolder}\\Scripts;${env:PATH}"
          }
        }
      },
      "linux": {
        "command": "${workspaceFolder}/${input:venvFolder}/bin/python",
        "options": {
          "env": {
            "VIRTUAL_ENV": "${workspaceFolder}/${input:venvFolder}",
            "PATH": "${workspaceFolder}/${input:venvFolder}/bin:${env:PATH}"
          }
        }
      },
      "osx": {
        "command": "${workspaceFolder}/${input:venvFolder}/bin/python",
        "options": {
          "env": {
            "VIRTUAL_ENV": "${workspaceFolder}/${input:venvFolder}",
            "PATH": "${workspaceFolder}/${input:venvFolder}/bin:${env:PATH}"
          }
        }
      },

      "args": ["-m", "pytest", "-ra"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": "$python"
    }
  ],
  "inputs": [
    {
      "id": "venvFolder",
      "type": "pickString",
      "description": "Seleziona la cartella del virtual env",
      "options": [".venv", "venv"],
      "default": "venv"
    }
  ]
}
