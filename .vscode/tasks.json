{
  // Task per eseguire i test con il venv attivo
  "$schema": "vscode://schemas/tasks",
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Tests: Pytest (venv)",
      "type": "shell",
      "command": "${workspaceFolder}\\venv\\Scripts\\python.exe",
      "args": ["-m", "pytest", "-ra"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": [
        "$pytest-python"
      ]
    }
  ]
}
