# Esempio di variabili per configurazione runtime (v1.3.0)

# ===== OpenAI core =====
OPENAI_API_KEY=sk-your-core-key
OPENAI_API_KEY_CODEX=sk-your-codex-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_PROJECT=proj_your_project_id

# ===== Assistant flow =====
OBNEXT_ASSISTANT_ID=asst_your_obnext_id
ASSISTANT_ID=asst_default_assistant
OPENAI_HTTP2=0
OPENAI_TIMEOUT=120
OPENAI_MAX_RETRIES=2

# ===== Vision =====
VISION_ENGINE=responses
VISION_SNAPSHOT_RETENTION_DAYS=30

# ===== UI =====
UI_ALLOW_LOCAL_ONLY=true

# ===== Google Drive =====
DRIVE_ID=your_drive_id_here
SERVICE_ACCOUNT_FILE=path/to/service_account.json

# ===== Runtime =====
PYTHONUTF8=1
PYTHONIOENCODING=UTF-8
LOG_LEVEL=INFO
LOG_PATH=logs/onboarding.log
ENV=dev              # dev | prod | ci
CI=false             # true | false

# ===== Integrazioni opzionali =====
GITHUB_TOKEN=your_github_token
GIT_DEFAULT_BRANCH=main
GITBOOK_TOKEN=your_gitbook_token
GITBOOK_WORKSPACE=your_workspace

# ===== Feature flags opzionali =====
FINANCE_IMPORT_ENABLED=0
LOG_REDACTION=auto   # auto | on | off

# ===== Google OAuth =====
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8501/admin
ALLOWED_GOOGLE_DOMAIN=example.com

# ===== Override opzionale file YAML per struttura raw =====
YAML_STRUCTURE_FILE=config/cartelle_raw.yaml
