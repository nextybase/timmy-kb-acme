[flake8]
max-line-length = 120

# compat con black e policy locali: ignora alcune regole a livello globale
extend-ignore =
    E203
    W503
    ANN101
    ANN102
    ANN201
    ANN202
    ANN204
    S110
    S112
    S311
    T201
    B009
    B010
    B023
    B033

per-file-ignores =
    tests/*: S603,S404,S101,ANN001,T201,B017
    src/tools/*: T201,S110
    src/tag_onboarding.py: E501,T201,S608
    src/pipeline/drive/upload.py: S110
    src/pipeline/file_utils.py: S110
    src/pipeline/path_utils.py: S110
    src/pipeline/yaml_utils.py: S110
