    "calibrabile",
    "idempotenti",
    "mockati",
    "versionato",
    "manutenibile",
    "Pylance",
    "normalizzatori",
    "sanitizzazione",
    "mocka",
    "facilitatori",
    "versionare",
    "pyproject",
    "validatore",
    "versioniamo",
    "taggata",
    "rilasciabile"
  ],
