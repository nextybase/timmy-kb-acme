{
  "version": "0.2",
  "language": "it,en",
  "files": ["**/*"],
  "ignorePaths": [
    "output/**",
    "venv/**",
    ".venv/**",
    "node_modules/**",
    "dist/**",
    "build/**",
    ".git/**",
    ".mypy_cache/**",
    ".pytest_cache/**"
  ],
  "words": [
    "SSoT",
    "HonKit",
    "slug",
    "HiTL",
    "Timmy",
    "Frontmatter",
    "sqlite",
    "Markdown",
    "Streamlit",
    "Docker",
    "GitBook",
    "YAML"
  ],
  "languageSettings": [
    {
      "languageId": "markdown",
      "caseSensitive": false
    }
  ]
}

