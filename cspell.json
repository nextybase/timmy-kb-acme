    "import�",
    "pathâ",
    "crossâ",
    "osservabilit",
    "Qualit",
    "utilit",
    "Preâ",
    "allâ"
  ],
  "ignoreRegExpList": [
    "/https?:\\/\\/\\S+/",
    "/`[^`]*`/",
    "/```[\\s\\S]*?```/",
    "/[A-Za-z]:\\\\[^\\s]+/"
  ],
  "languageSettings": [],
  "overrides": [
    {
      "filename": "src/**",
      "words": ["pytest", "mypy", "pyright", "numpy"]
    },
    {
      "filename": "tests/**",
      "words": ["pytest", "monkeypatch", "parametrize"]
    }
  ]
}
