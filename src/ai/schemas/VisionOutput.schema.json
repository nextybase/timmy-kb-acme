{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://next.local/schema/VisionOutput.schema.json",
  "title": "NeXT Vision → Semantic Mapping v1.0-beta",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0-beta"
    },
    "source": {
      "type": "string",
      "const": "vision"
    },
    "status": {
      "type": "string",
      "enum": [
        "ok",
        "halt"
      ]
    },
    "context": {
      "type": "object",
      "properties": {
        "slug": {
          "type": "string"
        },
        "client_name": {
          "type": "string"
        }
      },
      "required": [
        "slug",
        "client_name"
      ],
      "additionalProperties": false
    },
    "areas": {
      "type": "array",
      "minItems": 3,
      "maxItems": 9,
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "Chiave canonica kebab-case (solo a-z, 0-9 e '-').",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
          },
          "ambito": {
            "type": "string",
            "enum": [
              "governance",
              "strategico",
              "operativo",
              "compliance",
              "legale",
              "commerciale",
              "amministrazione-finanza",
              "hr",
              "it-data",
              "marketing-comunicazione",
              "prodotto-servizio"
            ]
          },
          "descrizione_breve": {
            "type": "string"
          },
          "descrizione_dettagliata": {
            "type": "object",
            "properties": {
              "include": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "exclude": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "artefatti_note": {
                "type": "string"
              }
            },
            "required": [
              "include",
              "exclude",
              "artefatti_note"
            ],
            "additionalProperties": false
          },
          "documents": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "artefatti": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "correlazioni": {
            "type": "object",
            "properties": {
              "entities": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "label": {
                      "type": "string"
                    },
                    "syn": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "required": [
                    "id",
                    "label",
                    "syn"
                  ],
                  "additionalProperties": false
                }
              },
              "relations": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "subj": {
                      "type": "string"
                    },
                    "pred": {
                      "type": "string"
                    },
                    "obj": {
                      "type": "string"
                    },
                    "card": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "subj",
                    "pred",
                    "obj",
                    "card"
                  ],
                  "additionalProperties": false
                }
              },
              "chunking_hints": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "entities",
              "relations",
              "chunking_hints"
            ],
            "additionalProperties": false
          }
        },
        "required": [
          "key",
          "ambito",
          "descrizione_breve",
          "descrizione_dettagliata",
          "documents",
          "artefatti",
          "correlazioni"
        ],
        "additionalProperties": false
      }
    },
    "system_folders": {
      "type": "object",
      "properties": {
        "identity": {
          "type": "object",
          "properties": {
            "documents": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          },
          "required": [
            "documents"
          ],
          "additionalProperties": false
        },
        "glossario": {
          "type": "object",
          "properties": {
            "artefatti": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "terms_hint": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "artefatti",
            "terms_hint"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "identity",
        "glossario"
      ],
      "additionalProperties": false
    },
    "missing": {
      "type": "object",
      "properties": {
        "sections": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "section": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              }
            },
            "required": [
              "section",
              "reason"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "sections",
        "details"
      ],
      "additionalProperties": false
    },
    "message_ui": {
      "type": "string"
    },
    "entities": {
      "type": "array",
      "description": "Lista delle entità fondamentali estratte dal Vision Statement",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name",
          "category",
          "description",
          "examples"
        ],
        "additionalProperties": false
      }
    },
    "relations": {
      "type": "array",
      "description": "Relazioni tra entità nel modello ER",
      "items": {
        "type": "object",
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        },
        "required": [
          "from",
          "to",
          "type"
        ],
        "additionalProperties": false
      }
    },
    "er_model": {
      "type": "object",
      "properties": {
        "entities": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "relations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "from": {
                "type": "string"
              },
              "to": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "required": [
              "from",
              "to",
              "type"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "entities",
        "relations"
      ]
    },
    "metadata_policy": {
      "type": "object",
      "properties": {
        "chunk_length_tokens": {
          "type": "object",
          "properties": {
            "target": {
              "type": "integer"
            },
            "overlap": {
              "type": "integer"
            }
          },
          "required": [
            "target",
            "overlap"
          ],
          "additionalProperties": false
        },
        "mandatory_fields": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "chunk_length_tokens",
        "mandatory_fields"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "version",
    "source",
    "status",
    "context",
    "areas",
    "system_folders",
    "missing",
    "message_ui",
    "entities",
    "relations",
    "er_model",
    "metadata_policy"
  ],
  "additionalProperties": false
}
