# Timmy-KB - .env.example
# -----------------------------------------------------------------------------
# Copia questo file in `.env` e compila SOLO le variabili necessarie
# per il tuo scenario. I percorsi possono essere assoluti o relativi al repo.
# Le stringhe con spazi NON vanno tra virgolette.
# -----------------------------------------------------------------------------

# Ambiente
ENV=dev
CI=false
LOG_REDACTION=auto
TIMMY_LOG_PROPAGATE=
TIMMY_LOG_MAX_BYTES=
TIMMY_LOG_BACKUP_COUNT=
TIMMY_NO_GITHUB=
GRAFANA_ADMIN_USER=
GRAFANA_ADMIN_PASSWORD=
GITBOOK_TOKEN=
GITBOOK_SPACE_ID=
# Slack webhook per notifiche CI (lascia vuoto se non usato)
SLACK_WEBHOOK_URL=

# --- OIDC (opzionale per CI GitHub) ---
GITHUB_OIDC_AUDIENCE=
GITHUB_OIDC_ROLE=
# ACTIONS_ID_TOKEN_REQUEST_URL / _TOKEN sono fornite runtime da GitHub Actions

# --- Telemetria gia supportata ---
TIMMY_OTEL_ENDPOINT=
TIMMY_SERVICE_NAME=timmy-kb
TIMMY_ENV=dev

# --- OpenAI / Assistant ---
OPENAI_API_KEY=
OPENAI_PROJECT=
OPENAI_BASE_URL=
OPENAI_TIMEOUT=
OPENAI_MAX_RETRIES=
OPENAI_API_KEY_CODEX=
ASSISTANT_ID=
OBNEXT_ASSISTANT_ID=

# --- Vision / Semantic pipeline ---
VISION_USE_KB=1
VISION_SAVE_SNAPSHOT=
VISION_SNAPSHOT_RETENTION_DAYS=

# --- Google Drive ---
SERVICE_ACCOUNT_FILE=
DRIVE_ID=
DRIVE_PARENT_FOLDER_ID=

# --- UI / Preview ---
PORT=4000
PREVIEW_MODE=
PREVIEW_PORT=
PREVIEW_LOG_DIR=logs/preview
PREVIEW_READY_TIMEOUT=
HONKIT_PORT=
UI_ALLOW_LOCAL_ONLY=true
UI_ALLOW_EXIT=
TAGS_MODE=

# --- Client DB (UI state) ---
CLIENTS_DB_DIR=.timmykb/clients
CLIENTS_DB_FILE=clients.db

# --- Git / Deploy ---
GITHUB_TOKEN=
GIT_DEFAULT_BRANCH=main
SKIP_GITHUB_PUSH=
USE_SHALLOW_CLONE=
REPO_ROOT_DIR=

# --- Timeout comandi pipeline ---
GIT_CMD_TIMEOUT=
DOCKER_CMD_TIMEOUT=
PROC_CMD_TIMEOUT=

# --- Google OAuth admin (UI) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
ALLOWED_GOOGLE_DOMAIN=

# --- Misc / Scripts opzionali ---
KB_HEALTH_MODEL=
TEMPLATE_CONFIG_ROOT=
YAML_STRUCTURE_FILE=
