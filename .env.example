# ===== PATHS =====
# Repository root (deve contenere .git o pyproject.toml)
REPO_ROOT_DIR=
# Workspace root canonico; il placeholder `<slug>` viene risolto automaticamente da ClientContext prima di validare il layout.
WORKSPACE_ROOT_DIR=/path/to/output/timmy-kb-<slug>

# ===== SECRETS =====
# ===== Google OAuth =====
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8501/admin
ALLOWED_GOOGLE_DOMAIN=example.com

# ===== Google Drive =====
DRIVE_ID=your-drive-id
SERVICE_ACCOUNT_FILE=./service_account.json

# ===== OpenAI core =====
OPENAI_API_KEY=sk-your-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_PROJECT=proj_your_project_id

# ===== Assistant flow =====
PROTOTIMMY_ID=asst_your_prototimmy_id
OBNEXT_ASSISTANT_ID=asst_your_vision_assistant_id
KGRAPH_ASSISTANT_ID=asst_your_kgraph_id
PLANNER_ASSISTANT_ID=asst_your_planner_id
OCP_EXECUTOR_ASSISTANT_ID=asst_your_ocp_executor_id

# ===== Grafana =====
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-password

# ===== Observability =====
TIMMY_OTEL_ENDPOINT=http://localhost:4318/v1/traces
TIMMY_GRAFANA_LOGS_UID=timmy-logs
TIMMY_GRAFANA_ERRORS_UID=timmy-errors
TIMMY_GRAFANA_URL=http://localhost:3000
